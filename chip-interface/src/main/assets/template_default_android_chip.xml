<?xml version="1.0"?>

<chip id="default-theme">
    <state type="collapsed">
        <text type="edit">
            <font>sans-serif</font>
            <size>12</size>
            <style>normal</style>
            <color>#ffffff</color>
        </text>
        <background type="collapsed">#a4a4a4</background>
    </state>

    <state type="expanded">
        <text id="header" type="label">
            <font>sans-serif</font>
            <size>16</size>
            <style>normal</style>
            <color>#000000</color>
        </text>
        <text id="subheader" type="label">
            <font>sans-serif</font>
            <size>14</size>
            <style>normal</style>
            <color>#000000</color>
        </text>
        <background type="top">#00a</background>
        <background type="bottom">#00f</background>
    </state>
</chip>
